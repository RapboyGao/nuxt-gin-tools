{
  "compilerOptions": {
    "declaration": true, // 生成声明文件
    "outDir": "./dist", // 指定输出目录
    "rootDir": "./", // 指定源代码目录（可选）
    "module": "nodenext", // 模块系统
    "target": "ES6", // 目标版本
    "strict": true, // 严格模式
    "esModuleInterop": true, // 支持ES模块interop
    "removeComments": false // 保留注释
  },
  "include": ["**/*.ts"], // 包含的文件
  "exclude": ["node_modules", "dist"] // 排除的文件
}
